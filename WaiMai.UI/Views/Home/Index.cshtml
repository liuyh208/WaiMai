@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>外卖订单管理系统</title>
     @*添加Jquery EasyUI的样式*@
    <link href="~/Content/jquery-easyui-1.4.1/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/jquery-easyui-1.4.1/themes/icon.css" rel="stylesheet" />

    @*添加Jquery，EasyUI和easyUI的语言包的JS文件*@
    <script src="~/Content/jquery-easyui-1.4.1/jquery.min.js"></script>
    <script src="~/Content/jquery-easyui-1.4.1/jquery.easyui.min.js"></script>
    <script src="~/Content/jquery-easyui-1.4.1/locale/easyui-lang-zh_CN.js"></script>
    
    <link rel="stylesheet" href="http://cdn.bootcss.com/font-awesome/4.2.0/css/font-awesome.min.css">
    @*执行JavaScript的脚本*@
    <script>    
        $(function () {
            //读取动态变化的时间
            ReadDateTimeShow();
            //绑定菜单按钮的点击事件

            BindMenuClickEvent2();
            //这里实现对时间动态的变化
            var setTimeInterval = setInterval(ReadDateTimeShow, 1000);

            //Tab页签的实现
            $("#worktab").tabs({});
           // loadMenus();
        });

        //绑定菜单按钮的点击事件  MenuLink
  
        //读取动态变化的时间
        function ReadDateTimeShow() {
            var year = new Date().getFullYear();
            var month = new Date().getMonth() + 1;
            var day = new Date().getDate();
            var time = new Date().toLocaleTimeString();
            var addDate = year + "年" + month + "月" + day + "日,时间:" + time;
            $("#date").text(addDate);
        }

        function BindMenuClickEvent2() {
            $(".MenuLink").click(function () {
                 
                //获取按钮里面的src属性
               
                //得到节点的名字来放去Title
                var title = $(this).text();

                //拼接一个Iframe标签
                var str = $(this).attr("src");
                var ico = $(this).attr("ico");
                
                if (str==undefined) {
                    $.messager.alert('提示', '正在玩命开发中……', 'info');
                    return;
                }

                //首先判断用户是否已经单击了此项，如果单击了直接获取焦点，负责打开
                var isExist = $("#worktab").tabs('exists', title);
                if (!isExist) {
                    //添加tab的节点，调用easyUITab标签的方法
                    $("#worktab").tabs('add', {
                        title: title,
                        href: str,
                        iconCls: ico,
                        closable: true
                    });
                }
                else {
                    //如果存在则获取焦点
                    $("#worktab").tabs('select', title);
                }
            });
        }
    </script>
</head>
<body class="easyui-layout">

    @*--------------------------------------网站头部开始（TOP）--------------------------------------*@
    <div data-options="region:'north',border:false,collapsible:false" style="height: 60px;">
        @*<h1>外卖订单管理系统1.0 </h1>
    <div><a href="/Login/Index"><b>注销</b></a></div>*@
        
        <table style="width: 100%;">
            <tr style="height: 55px;">
                <td style="width: 20px;"></td>
                <td style="text-align: right; vertical-align: middle; width: 0px;">
                    <img src="~/Images/logo.jpg" style="height: 40px; width: 40px;" />
                </td>
                <td style="width: 10px;"></td>
                <td style="font-size: 28px; font-weight: bold; vertical-align: middle;">外卖订单管理系统1.0 </td>
                <td style="width: auto;"></td>
                <td id="tdlogin" style="text-align: right; width: 100px;"><b>欢迎你 @User.Identity.Name</b></td>

                <td id="tdExit" style="text-align: center; width: 50px;"><a href="../Account/logout" class="easyui-linkbutton" data-options="plain:true"><i class="fa fa-power-off fa-2x"></i></a> </td>
                <td style="width: 30px;"></td>
            </tr>
        </table>
    </div>
    @*--------------------------------------网站头部结束（TOP）--------------------------------------*@

    @*--------------------------------------网站菜单栏开始（Left）--------------------------------------*@
    <div data-options="region:'west',split:true" title="菜单导航" style="width: 200px; padding: 1px; overflow: hidden;">

        <div class="easyui-accordion" data-options="fit:true">
            @{
                Html.RenderAction("Menus");
            }
        </div>

        </div>
    @*--------------------------------------网站结束（Left）--------------------------------------*@

    @*--------------------------------------网站中间部分开始（Center） 面包屑--------------------------------------*@
    <div data-options="region:'center'" style="overflow: hidden;">
        <div id="worktab" fit="true" border="false">
            <div title="外卖订单管理系统1" data-options="cache:false">
                <iframe id="frmWorkArea" width="100%" height="100%" frameborder="0" scrolling="yes" src="~/Welcome.html"></iframe>
            </div>
        </div>
    </div>
    @*--------------------------------------网站中间部分结束（Center）--------------------------------------*@

   

    @*--------------------------------------网站头部开始（Foot）--------------------------------------*@
    <div data-options="region:'south',collapsible:false" style="height: 40px; background: #efefef;">
            <div data-options="region:'center'" style="text-align: center; padding: 10px;">版权所有</div>
    </div>
    @*--------------------------------------网站头部结束（Foot）--------------------------------------*@

</body>
</html>
