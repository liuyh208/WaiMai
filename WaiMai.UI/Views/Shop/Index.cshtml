@*实现对EasyUI的DataGird控件操作的JS代码*@
<script type="text/javascript">
        $(function () {
            //当页面首次刷新的时候执行的事件
            initShopTable();
           
            //店铺信息的添加
            BindAddShop();

            //修改店铺信息的代码
            BindUpdateShopInfo();

            //绑定用户搜索按钮的点击事件
            BindSearchShop();

        });

        //实现对店铺DataGird控件的绑定操作
        function initShopTable(queryData) {
            $('#tbShop').datagrid({   //定位到Table标签，Table标签的ID是test
                //   UserInfo是控制器，GetAllUserInfos是控制器中获取用户数据的一个Action
                url: '/Shop/GetAll',   //指向后台的Action来获取当前用户的信息的Json格式的数据
                title: '店铺',  //标识
                //下面的这些属性如果谁不太清楚的话我建议去官方网站去学习或者在群里我们讨论，这里就不说了
                iconCls: 'icon-save',
                fit: true,
                border:false,
                nowrap: true,
                autoRowHeight: false,
                striped: true,
                collapsible: false,
                pagination: true,
                rownumbers: true,
                //sortName: 'ID',    //根据某个字段给easyUI排序
                sortOrder: 'asc',
                remoteSort: false,
                queryParams: queryData,
                idField: 'Id',
                frozenColumns: [[
	                { field: 'ckShop', checkbox: true },   //选择
	                { title: '主键', field: 'Id', width: 40, hidden: true },  //主键
                    { title: '店铺名称', field: 'Name', width: 100, sortable: true },  //登录名
                    { title: '联系人', field: 'Linker', width: 100, sortable: true},  //用户名
                    { title: '联系电话', field: 'Telephone', width: 100, sortable: true },
                    { title: '地址', field: 'Address', width: 100, sortable: true },
                    { title: '备注', field: 'Remarks', width: 190, sortable: true }

                ]],
                toolbar: [{
                    id: 'btnadd',
                    text: '添加',
                    iconCls: 'icon-add',
                    handler: function () {
                        //实现弹出注册信息的页面
                        $("#divAddShop").dialog('open').dialog('setTitle', '添加店铺信息');
                    }
                }, '-', {
                    id: 'btncut',
                    text: '修改',
                    iconCls: 'icon-cut',
                    handler: function () {
                        //实现修改的方法
                        UpdateShopInfo();
                    }
               
                }, '-', {
                    id: 'btnCancle',
                    text: '删除',
                    iconCls: 'icon-remove',
                    handler: function () {
                        //实现直接删除所有数据的方法
                        deleteShopInfo();
                    }
                }, '-', {
                    id: 'btnreload',
                    text: '刷新',
                    iconCls: 'icon-reload',
                    handler: function () {
                        $("#tbShop").datagrid("reload");
                    }
                }]
            });
        }

        //实现店铺的添加
        function BindAddShop() {
            $("#btnAddShop").click(function () {
                //判断用户的信息是否通过验证
                var validate = $("#frmAddShop").form('validate');
                if (validate == false) {
                    return false;
                }
                //获取需要传递的参数传递给前台
                var postData = $("#frmAddShop").serializeArray();

                //发送异步请求到后台保存用户数据
                $.post("/Shop/Create", postData, function (data) {
                    if (data = "OK") {
                        //添加成功  1.关闭弹出层，2.刷新DataGird
                        alert("添加店铺成功");
                        $("#divAddShop").dialog("close");
                        $("#tbShop").datagrid("reload");
                        $("#frmAddShop").form("clear");
                    }
                    else {
                        alert("添加店铺失败，请您检查");
                    }
                });
            });
        }

        //实现直接删除数据和伪删除数据的方法
        function deleteShopInfo() {
            //得到用户选择的数据的ID
            var rows = $("#tbShop").datagrid("getSelections");
            //首先判断用户是否已经选择了需要删除的数据,然后循环将用户选择的数据传递到后台
            if (rows.length >= 1) {
                //遍历出用户选择的数据的信息，这就是用户用户选择删除的用户ID的信息
                var ids = "";   //1,2,3,4,5
                for (var i = 0; i < rows.length; i++) {
                    //异步将删除的ID发送到后台，后台删除之后，返回前台，前台刷洗表格
                    ids += rows[i].Id + ",";
                }
                //最后去掉最后的那一个,
                ids = ids.substring(0, ids.length - 1);
                //获取用户选择的用户信息，如果用户选择了已经登录的用户的话需要给出不能删除的信息
                var roleNames = "";
                for (var i = 0; i < rows.length; i++) {
                    roleNames += rows[i].Name + ",";
                }
                roleNames = roleNames.substring(0, roleNames.length - 1);
                //首先取出来到底是直接删除还是伪删除发送异步请求的地址和是否是伪删除的参数

                //然后确认发送异步请求的信息到后台删除数据
                $.messager.confirm("删除信息", "您确认删除<font color='red' size='3'>" + roleNames + "</font>店铺吗？", function (DeleteRole) {
                    if (DeleteRole) {
                        $.post("/Shop/Delete", {ID:ids}, function (data) {
                            if (data == "OK") {
                                //友情提示用户删除成功，刷新表格
                                $.messager.alert("友情提示", "删除/成功");
                                $("#tbShop").datagrid("reload");
                                //当删除完成之后，第二次删除的时候还记得上次的信息，这样是不可以的，所以我们需要清除第一次的信息
                                //第一种方法
                                rows.length = "";
                                //第二种方法
                                $("#tbShop").datagrid("clearSelections");
                            }
                            else {
                                $.messager.alert("友情提示", data);
                            }
                        });
                    }
                });
            }
            else {
                alert("请选择你要删除的数据");
            }
        }

        //修改用户的信息
        function UpdateShopInfo() {
            //首先取出来用户选择的数据的ID
            var rows = $("#tbShop").datagrid("getSelections");
            //首先取出来值判断用户只能选择一个
            if (rows.length != 1) {
                $.messager.alert("友情提示", "每次只能修改/浏览一条，你已经选择了<font color='red'>" + rows.length + "</font>条", "error");
                return;
            }
                //处理修改的信息，弹出修改的对话框,然后显示选择的用户的详细信息
                $("#DivUpdateShop").dialog('open').dialog('setTitle', '修改店铺信息');
                var row = $('#tbShop').datagrid('getSelected');
                $('#frmUpdateShop').form('load', row);
          
        }


        //修改用户的相信信息
        function BindUpdateShopInfo() {
            $("#btnUpdate").click(function () {
                //首先也是对用户进行检测
                var validate = $("#frmUpdateShop").form("validate");
                if (validate == false) {
                    return false;
                }
                //构造参数发送给后台
                var posData = $("#frmUpdateShop").serializeArray();
                $.post("/Shop/Edit", posData, function (date) {
                    if (date == "OK") {
                        //修改成功，关闭弹出层，刷新DataGird
                        alert("修改成功");
                        $("#DivUpdateShop").dialog('close');
                        $("#tbShop").datagrid("reload");
                    }
                    else {
                        $.messager.alert("友情提示", "修改失败，请您检查");
                    }
                })
            });
        }

        //绑定搜索按钮的的点击事件
        function BindSearchShop() {
            //按条件进行查询数据，首先我们得到数据的值
            $("#btnShopSerach").click(function () {
                //得到用户输入的参数
                var queryData = {
                    Name: $("#txtShopName").val()
                }
                //将值传递给
                initShopTable(queryData);
                return false;
            });
        }

</script>

